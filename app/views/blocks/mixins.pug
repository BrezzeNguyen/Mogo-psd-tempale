mixin storyItem(src = "../images/img-blog1.png", number=15, text="Jan",title="Lorem ipsum dolor sit.", desc="Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet possimus iusto exercitationem.", view= 1000, comment= 100) 
    li.story-item 
        .story-media 
            img.story-image(src=src)
            .story-date
                span.story-date-number=number
                span.story-date-text=text
        h3.story-title=title 
        .story-desc= desc
        .story-meta
            .story-meta-item 
                i.fa.fa-eye.story-meta-icon 
                span.story-meta-number= view
            .story-meta-item 
                i.fa.fa-comment.story-meta-icon 
                span.story-meta-number=comment  

