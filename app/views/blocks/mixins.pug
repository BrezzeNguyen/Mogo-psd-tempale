mixin menuLink(title, href="#")
    li.header-menu-item
        a.header-menu-link(href= href)= title 

mixin headerBottomItem(number, title)
 .header-bottom-items
        span.header-bottom-number= number
        span.header-bottom-text= title

mixin blockBox(caption, title, desc)
    .block-box
        h3.block-box-caption= caption
        h3.block-box-heading= title
        if desc 
            p.block-box-desc=desc 
//- data = {src: "", title :"", iconClass: "", alt: ""} 
mixin blockAbout(data)
    .about-item 
        img.about-image(src=data.src, alt=data.alt)
        .about-content
            i.about-icon(class= data.iconClass)
            span.about-title= data.title

mixin blockNumber(count, text)
    .number-item    
        h4.number-item-count=count
        span.number-item-text= text 

mixin blockService(src, title, des)
    .service-item 
        img.service-item-icon(src= src)
        .service-item-info 
            h3.service-item-title= title 
            p.service-item-des= des

mixin blockAccordion(src,title,iconClass,content, isactive = "")
    .wedo-item(class= isactive )
        .wedo-item-header 
            img(src=src).wedo-item-img
            h3.wedo-item-title= title 
            i.wedo-item-icon(class= iconClass)
        .wedo-item-content
            .wedo-item-text=content

mixin TeamSocial(facebook= "#", twitter= "#", pinterest= "#", instagram= "#")
    ul.team-social 
        li.team-social-item 
            a.team-social-link(href=facebook)
                i.fab.fa-facebook-f
        li.team-social-item 
            a.team-social-link(href=twitter)
                i.fab.fa-twitter
        li.team-social-item 
            a.team-social-link(href=pinterest)
                i.fab.fa-pinterest
        li.team-social-item 
            a.team-social-link(href=instagram)
                i.fab.fa-instagram


mixin blockTeam(src,teamname,teamposition)
    .team-item 
        .team-main
            img(src=src).team-image
            .team-content 
                if block 
                    block
                        
        .team-info 
            h3.team-name=teamname 
            span.team-position=teamposition  

mixin blockworkItem(src, icon, title, desc,itemfull = "", )
    .work-item(class=itemfull)
        img.work-image(src=src ) 
        .work-content 
            img(src=icon).work-icon
            h3.work-title= title
            span.work-desc.text.text-light.text-italican.work-desc=desc

